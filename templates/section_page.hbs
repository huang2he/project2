<nav class="sub-nav">
  {{breadcrumbs}}
  {{search}}
</nav>

<header class="page-header">
  <h1>
    {{#if section.internal}}
      <span class="visibility-internal" data-title="{{t 'internal'}}">
        <span class="visibility-internal-icon"></span>
      </span>
    {{/if}}
    {{section.name}}
  </h1>
  <span>{{subscribe}}</span>
</header>

<p>{{section.description}}</p>

{{#if section.articles}}
<div class="section-homecats split">
  <ul class="article-list article-list-3">
    {{#each section.articles}}
      <li {{#if promoted}} class="article-promoted" {{/if}}>
        {{#if promoted}}
          <span data-title="{{t 'promoted'}}">★</span>
        {{/if}}
        <a href="{{url}}">{{title}}</a>
      </li>
    {{/each}}
  </ul>
  <ul class="article-list article-list-3">
    {{#each section.articles}}
      <li {{#if promoted}} class="article-promoted" {{/if}}>
        {{#if promoted}}
          <span data-title="{{t 'promoted'}}">★</span>
        {{/if}}
        <a href="{{url}}">{{title}}</a>
      </li>
    {{/each}}
  </ul>
</div>
{{else}}
  <i class="section-empty">
    <a href="{{section.url}}">{{t 'empty'}}</a>
  </i>
{{/if}}
<div style="clear:both"></div>
{{pagination}}
